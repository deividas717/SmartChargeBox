<?xml version="1.0" encoding="utf-8"?>

<ViewSwitcher
    android:inAnimation="@android:anim/slide_in_left"
    android:outAnimation="@android:anim/slide_out_right"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="v1.ev.box.charge.smart.smartchargeboxv1.activites.charge_activity.ChargeActivity"
    android:id="@+id/view_switcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dd.CircularProgressButton
        app:theme="@style/AlertDialog.AppCompat"
        android:visibility="gone"
        app:cpb_textIdle="Pradėti korvimą"
        android:id="@+id/circularButton1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_cornerRadius="48dp"
        app:cpb_iconComplete="@drawable/ic_action_accept"
        app:cpb_iconError="@drawable/ic_action_cancel"/>

    <RelativeLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  >

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circular"
            android:secondaryProgress="100" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00:00:00"
            android:textColor="#02a2e1"
            android:textSize="50dip"/>

        <Button
            android:id="@+id/cancel_charging_btn"
            android:backgroundTint="#ff0000"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:text="Atšaukti krovimą"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_above="@+id/empty_view"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/empty_view"
            android:layout_height="30dip"
            android:layout_width ="1dip"
            android:visibility="invisible"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</ViewSwitcher>